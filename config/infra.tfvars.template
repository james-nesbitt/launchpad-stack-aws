name = "unnamed"

aws_region = "us-east-1"

mcr_version = "20.10.16"
mke_version = "3.6.6"

mke_skip_install   = false
mke_skip_uninstall = true

mke_connect = {
  username   = "admin"
  password   = ""
  unsafe_ssl = true
}

// configure the network stack
network = {
  cidr                 = "172.31.0.0/16"
  public_subnet_count  = 3
  private_subnet_count = 0 // if 0 then no private nodegroups allowed
}

// one definition for each group of machines to include in the stack
nodegroups = {
  // A stack
  "AMan" = { // managers for A
    platform    = "ubuntu_20.04"
    count       = 3
    type        = "m6a.2xlarge"
    volume_size = 100
    role        = "manager"
    public      = true // public subnets or private subnets
    user_data   = ""
  },
  "AWrk_1" = { // workers for A
    platform    = "ubuntu_20.04"
    count       = 6
    type        = "c6a.xlarge"
    volume_size = 100
    public      = true // public subnets or private subnets
    role        = "worker"
    user_data   = ""
  }
}

// one definition per incoming ingress, for a collection of nodegroups
ingresses = {
  "mke" = {
    nodegroups    = ["AMan"]
    node_port     = 80
    node_protocol = "TCP"

    listen = {
      "https" = {
        port     = 443
        protocol = "TCP"
      }
    }
  }
}

